<form action="/players/add" method="POST">
<div class="container-fluid form-row">

  <div class="form-group col-md-6 col-offset 1">
    <label for="cedula"> Cedula</label>
    <input type="number" class="form-control" id="cedula" placeholder="Cedula" name="id">
  </div>

  <div class="form-group col-md-6">
    <label for="nombre">Nombres:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="name">
  </div>

  <div class="form-group col-md-6">
    <label for="apellidos">Apellidos</label>
    <input type="text" class="form-control" id="apellidos" placeholder="Apellidos" name="last_name">
  </div>

  <div class="form-group col-md-6">
    <label for="telefono">Telefono:</label>
    <input type="number" class="form-control" id="telefono" placeholder="Celular" name="cellphone">
  </div>
  <div class="form-group col-md-6">
    <label for="inputEmail4">Email</label>
    <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="mail">
  </div>

<div class="form-group col-md-6">
  <label for="direccion">Direccion</label>
  <input type="text" class="form-control" id="direccion" placeholder="Casa" name="address">
</div>

<div class="form-group col-md-6">
  <label for="fecha_nacimiento">Fecha de nacimiento:</label>
  <input type="date" class="form-control" id="nacimiento" placeholder="Fecha de nacimiento" name="date_n">
</div>

</div>

<div class="container-fluid form-row">

  <div class="form-group col-md-6">
    <label for="Equipo">Equipo</label>
    <select id="categoria" class="form-control" name="team">
      <option selected>Fenix</option>
      <option value="RFC">RFC</option>
      <option value="DSC">DSC</option>
    </select>
  </div>



  <div class="form-group col-md-2">
    <label for="numero">Numero de Cancha</label>
    <input type="number" class="form-control" id="numero" name="number_player" placeholder="numero cancha">
  </div>
</div>



<div class="container-fluid">
<button type="submit" class="btn btn-primary">Agregar Jugador</button>

</div>
